<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="BoardTable-Mapper">
  	<select id="selectBoardTable">
  		select * from boardtable
  	</select>
  	<select id="selectBoardTableById">
  		select * from boardtable
  		where tablenum=#{tablenum}
  	</select>
  	<insert id="insertBoardTable">
  		insert into
  		boardtable(tablenum, category, isuse)
  		values(#{tablenum}, #{category}, #{isuse})
  	</insert>
  	<update id="updateBoardTable">
  		update boardtable
  		set
  		category = #{category}, isuse=#{isuse}
  		where tablenum=#{tablenum}
  	</update>
  	<delete id="deleteBoardTable">
  		delete boardtable
  		where category=#{category}
  	</delete>
  </mapper>